{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":dependencyDashboard",
    ":disableMajorUpdates",
    ":disableRateLimiting"
  ],
  "enabledManagers": ["composer"],
  "rangeStrategy": "bump",
  "updateLockFiles": true,
  "automerge": true,
  "gitLabAutomerge": true,
  "groupName": "all"
}
